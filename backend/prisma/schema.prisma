generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}
model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  player1Games Game[] @relation("Player1Games")
  player2Games Game[] @relation("Player2Games")
  wonGames     Game[] @relation("WinnerGames")
}

model Game {
  id         String   @id @default(uuid())
  player1Id  String
  player2Id  String?
  winnerId   String?
  moves      Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  player1 User @relation("Player1Games", fields: [player1Id], references: [id])
  player2 User? @relation("Player2Games", fields: [player2Id], references: [id])
  winner  User? @relation("WinnerGames", fields: [winnerId], references: [id])
}
